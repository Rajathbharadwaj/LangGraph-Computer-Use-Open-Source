{
  "workflow_id": "follower_farming",
  "name": "Follower Farming",
  "description": "Find accounts similar to yours (2-10x followers, same niche) and engage with THEIR followers. High conversion rate (20-30% follow back).",
  "category": "growth",
  "difficulty": "intermediate",
  "estimated_time_minutes": 45,
  "expected_roi": "very_high",
  "version": "1.0",
  "schedule": {
    "frequency": "daily",
    "optimal_times": ["2pm"]
  },
  "config": {
    "accounts_per_session": 20,
    "min_similarity_score": 0.7,
    "target_account": "similar_niche_account",
    "likes_per_account": 2,
    "comments_per_account": 1
  },
  "steps": [
    {
      "id": "step_1",
      "type": "navigate",
      "action": "navigate_to_url",
      "params": {
        "url": "https://x.com/{{config.target_account}}/followers"
      },
      "description": "Navigate to similar account's followers",
      "next": "step_2"
    },
    {
      "id": "step_2",
      "type": "analyze",
      "action": "get_comprehensive_context",
      "params": {},
      "description": "Load follower list",
      "next": "step_3"
    },
    {
      "id": "step_3",
      "type": "loop",
      "loop_count": "{{config.accounts_per_session}}",
      "description": "Engage with similar followers",
      "children": [
        {
          "id": "step_3a",
          "type": "analysis",
          "action": "extract_account_insights",
          "params": {
            "username": "{{follower_username}}"
          },
          "description": "Analyze follower account",
          "next": "step_3b"
        },
        {
          "id": "step_3b",
          "type": "condition",
          "condition": "similarity_score > {{config.min_similarity_score}} AND active_last_7_days == true",
          "description": "Check if worth engaging",
          "if_true": "step_3c",
          "if_false": "next_follower"
        },
        {
          "id": "step_3c",
          "type": "navigate",
          "action": "navigate_to_url",
          "params": {
            "url": "https://x.com/{{follower_username}}"
          },
          "description": "Visit their profile",
          "next": "step_3d"
        },
        {
          "id": "step_3d",
          "type": "loop",
          "loop_count": "{{config.likes_per_account}}",
          "description": "Like recent posts",
          "children": [
            {
              "id": "step_3d1",
              "type": "action",
              "action": "like_post",
              "params": {
                "author": "{{follower_username}}"
              },
              "description": "Like their post"
            }
          ],
          "next": "step_3e"
        },
        {
          "id": "step_3e",
          "type": "action",
          "action": "comment_on_post",
          "params": {
            "author": "{{follower_username}}",
            "comment": "{{contextual_comment}}"
          },
          "description": "Leave thoughtful comment",
          "next": "step_3f"
        },
        {
          "id": "step_3f",
          "type": "memory",
          "action": "save_to_history",
          "params": {
            "action": "follower_farming_engagement",
            "target_account": "{{follower_username}}",
            "track_follow_back": true
          },
          "description": "Track for follow-back rate"
        }
      ],
      "next": "step_4"
    },
    {
      "id": "step_4",
      "type": "end",
      "description": "Workflow complete - check follow backs in 24hrs"
    }
  ],
  "success_metrics": {
    "accounts_engaged": "count",
    "follow_back_rate": "percentage",
    "avg_similarity_score": "metric"
  },
  "learning_enabled": true
}
